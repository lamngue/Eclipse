
public class Recursive {
	public static void printStars(int b,int n) {
		for(int i = 0;i<b;i++) {
			System.out.print("_");
		}
		for(int i = 0;i<n;i++) {
			System.out.print("_*");
		}
		System.out.println();

	}
	public static void downUp(int b, int n) {
		if (n == 1) {
			printStars(b,n);
		}else {
			printStars(b,n);
			downUp(b+1,n-1);
		}
	}
	public static void main(String[] args) {
		downUp(0,3);
	}
}
